<h1>Users</h1>

<% if can? :create, User %>
  <%= link_to "New User", new_user_path, class: "btn btn-primary mb-3" %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td>
          <%= link_to "Show", user_path(user), class: "btn btn-outline-secondary btn-sm" %>

          <% if can? :edit, user %>
            <%= link_to "Edit", edit_user_path(user), class: "btn btn-outline-primary btn-sm" %>
          <% end %>

          <% if can? :destroy, user %>
            <%= link_to "Delete", user_path(user), method: :delete, data: { confirm: "Are you sure?", turbo: false }, class: "btn btn-outline-danger btn-sm" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>




