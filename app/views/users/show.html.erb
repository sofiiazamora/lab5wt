<h1>User Details</h1>

<p><strong>Email:</strong> <%= @user.email %></p>
<p><strong>First Name:</strong> <%= @user.first_name %></p>
<p><strong>Last Name:</strong> <%= @user.last_name %></p>

<%= link_to 'Back to Users', users_path, class: "btn btn-secondary me-2" %>
<%= link_to 'Add New User', new_user_path, class: "btn btn-primary me-2" %>
<%= link_to 'Edit User', edit_user_path(@user), class: "btn btn-warning" %>

<h2>Chats</h2>
<ul>
  <% @user.chats_as_sender.each do |chat| %>
    <li>Chat with <%= chat.receiver.full_name %></li>
  <% end %>
  <% @user.chats_as_receiver.each do |chat| %>
    <li>Chat with <%= chat.sender.full_name %></li>
  <% end %>
</ul>

<h2>Messages Sent</h2>
<ul>
  <% @user.messages.each do |message| %>
    <li><%= message.body %> (in Chat #<%= message.chat_id %>)</li>
  <% end %>
</ul>

