<h1>Messages</h1>

<%= link_to "New Message", new_message_path, class: "btn btn-primary mb-3" %>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Author</th>
      <th>Chat ID</th>
      <th>Body</th>
      <th>Created At</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.id %></td>
        <td><%= "#{message.user.first_name} #{message.user.last_name}" %></td>
        <td><%= message.chat.id %></td>
        <td><%= message.body %></td>
        <td><%= message.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to 'Show', message_path(message), class: "text-decoration-underline" %></td>
        <td><%= link_to 'Edit', edit_message_path(message), class: "text-decoration-underline" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


