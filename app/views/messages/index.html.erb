<h1>Messages</h1>


<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Chat ID</th>
      <th>User ID</th>
      <th>Content</th>
      <th>Created At</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.id %></td>
        <td><%= message.chat_id %></td>
        <td><%= message.user_id %></td>
        <td><%= message.content %></td>
        <td><%= message.created_at %></td>
        <td><%= link_to 'Show', message_path(message) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

